<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <!-- ====================================================================== -->
    <!-- P A R E N T  P R O J E C T  D E S C R I P T I O N                      -->
    <!-- ====================================================================== -->
    <parent>
        <groupId>we</groupId>
        <artifactId>we.retail</artifactId>
        <version>1.9.0</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <!-- ====================================================================== -->
    <!-- P R O J E C T  D E S C R I P T I O N                                   -->
    <!-- ====================================================================== -->
    <artifactId>we.retail.all</artifactId>
  <version>1.9.3-SNAPSHOT</version>
    <packaging>content-package</packaging>
    <name>We.Retail - All</name>
    <description>Combined package for We.Retail</description>

    <scm>
        <connection>scm:git:https://git.corp.adobe.com/CQ/aem-sample-we-retail.git</connection>
        <developerConnection>scm:git:git@git.corp.adobe.com:CQ/aem-sample-we-retail.git</developerConnection>
        <url>https://git.corp.adobe.com/CQ/aem-sample-we-retail/tree/master/all</url>
        <tag>HEAD</tag>
    </scm>

    <build>
        <plugins>
            <plugin>
                <groupId>com.day.jcr.vault</groupId>
                <artifactId>content-package-maven-plugin</artifactId>
                <extensions>true</extensions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>buildSinglePackage</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <properties>
                <maven.test.skip>true</maven.test.skip>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.day.jcr.vault</groupId>
                        <artifactId>content-package-maven-plugin</artifactId>
                        <extensions>true</extensions>
                        <configuration>
                            <verbose>true</verbose>
                            <failOnError>true</failOnError>
                            <group>adobe/aem6/sample</group>
                            <subPackages>
                                <subPackage>
                                    <groupId>${project.groupId}</groupId>
                                    <artifactId>we.retail.ui.apps</artifactId>
                                    <filter>true</filter>
                                </subPackage>
                                <subPackage>
                                    <groupId>${project.groupId}</groupId>
                                    <artifactId>we.retail.ui.content</artifactId>
                                    <filter>true</filter>
                                </subPackage>
                                <subPackage>
                                    <groupId>com.adobe.aem.sample</groupId>
                                    <artifactId>we.retail.commons.content</artifactId>
                                    <filter>true</filter>
                                </subPackage>
                                <subPackage>
                                    <groupId>com.adobe.cq</groupId>
                                    <artifactId>com.adobe.cq.wcm.core.components.all</artifactId>
                                    <filter>true</filter>
                                </subPackage>
                            </subPackages>
                            <dependencies>
                                <dependency>
                                    <group>day/cq60/product</group>
                                    <name>cq-content</name>
                                    <version>[6.1.76,)</version>
                                </dependency>
                                <dependency>
                                    <group>day/cq60/product</group>
                                    <name>cq-commerce-content</name>
                                    <version>[1.2.222,)</version>
                                </dependency>
                            </dependencies>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>autoInstallSinglePackage</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.day.jcr.vault</groupId>
                        <artifactId>content-package-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>install-package</id>
                                <goals>
                                    <goal>install</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <targetURL>http://${aem.host}:${aem.port}/crx/packmgr/service.jsp</targetURL>
                            <failOnError>true</failOnError>
                            <failOnMissingEmbed>true</failOnMissingEmbed>
                            <verbose>true</verbose>
                            <failOnError>true</failOnError>
                            <group>adobe/aem6/sample</group>
                            <subPackages>
                                <subPackage>
                                    <groupId>${project.groupId}</groupId>
                                    <artifactId>we.retail.ui.apps</artifactId>
                                    <filter>true</filter>
                                </subPackage>
                                <subPackage>
                                    <groupId>${project.groupId}</groupId>
                                    <artifactId>we.retail.ui.content</artifactId>
                                    <filter>true</filter>
                                </subPackage>
                                <subPackage>
                                    <groupId>com.adobe.aem.sample</groupId>
                                    <artifactId>we.retail.commons.content</artifactId>
                                    <filter>true</filter>
                                </subPackage>
                                <subPackage>
                                    <groupId>com.adobe.cq</groupId>
                                    <artifactId>com.adobe.cq.wcm.core.components.all</artifactId>
                                    <filter>true</filter>
                                </subPackage>
                            </subPackages>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <dependencies>
        <dependency>
            <groupId>com.adobe.aem.sample</groupId>
            <artifactId>we.retail.commons.content</artifactId>
            <version>1.9.2</version>
            <type>zip</type>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.adobe.cq</groupId>
            <artifactId>com.adobe.cq.wcm.core.components.all</artifactId>
            <version>0.9.0</version>
            <type>zip</type>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>we</groupId>
            <artifactId>we.retail.ui.apps</artifactId>
            <version>1.9.0</version>
            <type>zip</type>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>we</groupId>
            <artifactId>we.retail.ui.content</artifactId>
            <version>1.9.0</version>
            <type>zip</type>
            <scope>provided</scope>
        </dependency>
    </dependencies>

</project>
